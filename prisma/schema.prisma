generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // Uses an absolute path inside the container (see docker-compose env)
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  author    String   @default("anon") @db.Text
  text      String   @db.Text
  createdAt DateTime @default(now())

  @@index([createdAt])
}
